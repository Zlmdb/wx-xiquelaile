/* 弹出层 */
.mask{
  position: fixed;
  z-index: 100000;
  top:0;
  right:0;
  bottom:0;
  left:0;
  width:100%;
  height:100%;
  background-color: rgba(0, 0, 0, 0.5);
  transition: all 2s ease-in-out;
}
.picker{
  position:absolute;
  z-index: 100000;
  right:0; 
  bottom:-738rpx;
  left:0;
  background-color: #fff;
  transition: all 3s ease-in-out;
}
.picker-title{
  box-sizing: border-box;
  border-bottom:1px solid #f5f5f5;
  height:100rpx;
  line-height: 100rpx;
  font-size:36rpx;
  color:#333;
  text-align: center;
  font-weight: bold;
}
