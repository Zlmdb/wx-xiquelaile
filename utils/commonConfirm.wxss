/*mask*/  
.toast_mask {  
  background-color: transparent; 
  width: 100%;  
  height: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 888;  
}  
/*toast*/  
.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.toast_content {  
  width: 55%;  
  padding: 20rpx;  
  background: rgba(0, 0, 0, 0.5);  
  border-radius: 20rpx;  
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
}
.toast_content_button{
  color:#333;
  font-size:28rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.toast_content_button1{
  box-sizing: border-box;
  display:inline-block;
  width:50%;
  text-align:center;
  padding:10rpx;
  border:1px solid #b1b1b1;
}
